@model GUIA6.Models.calculo
@{
    ViewBag.Title = "Index";
}

<h2>Operaciones</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(Model=>Model.numero1, new { @class="control-label" })
        @Html.TextBoxFor(Model => Model.numero1, new {@class="form-control", type="number"})
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.numero2, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.numero2, new { @class = "form-control", type = "number" })
        
    </div>
    <br />
    <div class="form-group">
        <input id="Submit1" type="submit" value="Create" class="btn btn-success" />
    </div>
    <br />
    <br /> 
   
    if (ViewBag.resultado != null)
    {
        <p>Resultado: &nbsp; @ViewBag.resultado</p>
        <p>Resultado de resta: &nbsp; @ViewBag.resultado2</p>
        <p>Resultado de division: &nbsp; @ViewBag.resultado3</p>
        <p>Resultado de Multiplicacion: &nbsp; @ViewBag.resultado4</p>

    }
}

